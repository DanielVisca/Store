<p id="notice"><%= notice %></p>

<h1>Products</h1>

<%= form_tag("/search", method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Inventory count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= product.inventory_count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h2>Create Cart</h2>
<%= link_to "Create a cart", new_cart_path %>

<h3>View Cart</h3>
<%= link_to 'Your Cart', carts_path %>
<h4> Purchase Cart </h4>
