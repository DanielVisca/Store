<p id="notice"><%= notice %></p>
<%= link_to "Back", products_path %>
<h1>Carts</h1>

<table>
  <thead>
    <tr>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= cart.product.title %> </td>
        <td><%= cart.product.price %> </td>
        <td><%= link_to 'Remove', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<strong> Total price of cart </strong>
<%= total_cost %>
<br>
<%= link_to 'Purchase', purchase_path(:id) %>
<br>
<%= link_to 'New Cart', new_cart_path %>
